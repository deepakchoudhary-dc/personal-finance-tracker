# Environment Variables for Finance Tracker
# Copy this file to .env and fill in your API keys

# World Bank API (usually no key required, but rate limits apply)
WORLD_BANK_API_KEY=

# FRED API Key (Federal Reserve Economic Data)
# Get your key from: https://fred.stlouisfed.org/docs/api/api_key.html
FRED_API_KEY=your_fred_api_key_here

# Alpha Vantage API (for financial data)
ALPHA_VANTAGE_API_KEY=

# Quandl API (for economic data)
QUANDL_API_KEY=

# Database Configuration
DATABASE_URL=sqlite:///data/finance_tracker.db

# Dashboard Configuration
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Data Update Frequency (in hours)
DATA_UPDATE_FREQUENCY=24

# Default Settings
DEFAULT_CURRENCY=USD
DEFAULT_COUNTRY=United States
DEFAULT_BASE_YEAR=2020
